int I=11;
int D1,D2,Q1=0,Q2=0,R1,R2,R3,L1,L2,L3;
void setup()
{
  pinMode(2,OUTPUT);
  pinMode(3,OUTPUT);
  pinMode(4,OUTPUT);
  pinMode(5,OUTPUT);
  pinMode(6,OUTPUT);
  pinMode(7,OUTPUT);
  pinMode(8,OUTPUT);
  pinMode(9,OUTPUT);
  pinMode(13,OUTPUT);
}

void loop() 
{
  D1=(Q1^Q2); 
  D2=!Q2;
  if(I==00)
  {
   R1=!0;L1=!0;
   R2=!0;L2=!0;
   R3=!0;L3=!0;
  } 
  if(I==01)
  {
    if(Q1==0&&Q2==0)
    {
      R1=!0;L1=!0;
      R2=!0;L2=!0;
      R3=!0;L3=!0;
    }
    if(Q1==0&&Q2==1)
    {
      R1=!1;L1=!0;
      R2=!0;L2=!0;
      R3=!0;L3=!0;
    }
    
    if(Q1==1&&Q2==0)
    {
      R1=!0;L1=!0;
      R2=!1;L2=!0;
      R3=!0;L3=!0;
    }
    
    if(Q1==1&&Q2==1)
    {
      R1=!0;L1=!0;
      R2=!0;L2=!0;
      R3=!1;L3=!0;
    }
  }
  if(I==10)
  {
    if(Q1==0&&Q2==0)
    {
      L1=!0;R1=!0;
      L2=!0;R2=!0;
      L3=!0;R3=!0;
    }
    if(Q1==0&&Q2==1)
    {
      L1=!1;R1=!0;
      L2=!0;R2=!0;
      L3=!0;R3=!0;
    }
    
    if(Q1==1&&Q2==0)
    {
      L1=!0;R1=!0;
      L2=!1;R2=!0;
      L3=!0;R3=!0;
    }
    
    if(Q1==1&&Q2==1)
    {
      L1=!0;R1=!0;
      L2=!0;R2=!0;
      L3=!1;R3=!0;
    }
  }
  if(I==11)
    {
    if(Q1==0&&Q2==0)
    {
      R1=!0;L1=!0;
      R2=!0;L2=!0;
      R3=!0;L3=!0;
    }
    if(Q1==0&&Q2==1)
    {
      R1=!1;L1=!1;
      R2=!1;L2=!1;
      R3=!1;L3=!1;
    }
    
    if(Q1==1&&Q2==0)
    {
      R1=!0;L1=!0;
      R2=!0;L2=!0;
      R3=!0;L3=!0;
    }
    
    if(Q1==1&&Q2==1)
    {
      R1=!1;L1=!1;
      R2=!1;L2=!1;
      R3=!1;L3=!1;
    }
  }
  digitalWrite(13,LOW);
   delay(500);
   digitalWrite(13,HIGH);
   delay(500);
  Q1=D1;
  Q2=D2;
   digitalWrite(2,D1);
   digitalWrite(3,D2);
   digitalWrite(4,R1);
   digitalWrite(5,R2);
   digitalWrite(6,R3);
   digitalWrite(7,L1);
   digitalWrite(8,L2);
   digitalWrite(9,L3);   
}
